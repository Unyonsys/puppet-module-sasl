# SERVEUR LDAP
LDAP_SERVERS: <% authentication_ldap_servers.each do |ldap_server| -%><%= ldap_server -%> <% end %>
# DOMAINE
LDAP_DEFAULT_DOMAIN: <%= domain %>

LDAP_TIMEOUT: 10
LDAP_TIME_LIMIT: 10
LDAP_CACHE_TTL: 30
LDAP_CACHE_MEM: 32768

# VERSION LDAP
LDAP_VERSION: 3

# SASL Pour l'accès au serveur
LDAP_USE_SASL: no

# Méthode d'authentification (bind / custom / fastbind)
LDAP_AUTH_METHOD: bind

# Utilisateur utilisé pour la connexion - Si vide = Anonyme
LDAP_BIND_DN: <%= ldap_bind_dn %>
# Et le mot de passe
LDAP_BIND_PW: <%= ldap_bind_pw %>

# Base de départ de la recherche
LDAP_SEARCH_BASE: dc=root
# Et profondeur (sub / one / base )
LDAP_SCOPE: sub

# Filtre de recherche : users should login with email BUT we also support simple uid specifically for the cyrus admin user
LDAP_FILTER: (|(mail=%u@%r)(&(uid=%u)(cn=Cyrus MASTER)))
# Et nom du champ contenant le mot de passe
LDAP_PASSWORD_ATTR: userPassword
